<li class="snippet-all-posts">
  <article>
    <div>
      <h3
        class="
          snippet__title-all-posts
          text-gradient
          article-special-case
          inline-block
        "
      >
        <a href="{{ post.url }}">{{ post.data.title }} | </a>
      </h3>

      <p class="snippet__meta inline-block">
        By <span>{{ post.data.author }} on</span>
        <span>{{ post.data.date | postDate }}&nbsp; |</span>
      </p>

      <div class="read inline-block">
        <span
          ><strong>{{ post.data.read }} read&nbsp;</strong></span
        >
        <i class="far fa-clock"></i>
      </div>
      <!-- 
      <div class="inline-block">
        &nbsp;| <i class="fa fa-comments"></i>&nbsp; {% include
        'comment-number.njk' %}
      </div> -->
    </div>
  </article>
</li>
