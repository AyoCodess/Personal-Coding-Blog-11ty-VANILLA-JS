---
layout: "base-blog.njk"
---

<article class="main-article">
  <div class="container container--narrow flow">
    <h1 class="article-title text-gradient">{{ title }}</h1>
    <h2></h2>
    <figure class="main-article__figure">
      <img class="article-img" src="{{ image }}" alt="{{ imageAlt }}" />
      <figcaption>{{ imageAlt }}</figcaption>
    </figure>

    {{ content | safe }}

    <h1 class="section-title text-gradient">Recent Articles</h1>
    <div class="recent-links">
      {%- for post in collections.post.slice(1) | reverse -%} {% include
      'recent-articles-links.njk'%} {%- endfor %}
    </div>

    {% include 'disqus.njk'%}
  </div>
</article>
