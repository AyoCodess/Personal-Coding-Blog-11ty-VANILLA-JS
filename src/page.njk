---
title: My Blog
layout: "base.njk"
pagination:
  data: collections.post
  size: 2
  alias: posts
---

<div class="section container">
  <h1 class="section-title text-gradient blog-title">Most Recent Articles</h1>

  <ul role="list" class="articles__list flow">
    {%- for post in posts %} {% include 'article-snippet.njk'% } {%- endfor %}
  </ul>
</div>

{% if pagination.href.previous %}
<a href="{{ pagination.href.previous }}">Prev</a>
{% endif %} {% if pagination.href.next %}
<a href="{{ pagination.href.next }}">Next</a>
{% endif %}
